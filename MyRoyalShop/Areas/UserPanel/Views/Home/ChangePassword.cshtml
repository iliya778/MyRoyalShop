@model MyRoyalShop.DataLayer.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
    
}

<h1>تغییر کلمه عبور </h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/UserPanel/Home/ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldUserPassword" class="control-label"></label>
                <input asp-for="OldUserPassword" class="form-control" />
                <span asp-validation-for="OldUserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUserPassword" class="control-label"></label>
                <input asp-for="NewUserPassword" class="form-control" />
                <span asp-validation-for="NewUserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUserRePassword" class="control-label"></label>
                <input asp-for="NewUserRePassword" class="form-control" />
                <span asp-validation-for="NewUserRePassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
